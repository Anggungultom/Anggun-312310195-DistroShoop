                    android:layout_height="wrap_content"
                    android:text="Shop Now"
                    android:backgroundTint="@color/white"
                    android:textColor="#c5cdc1"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <ImageView
